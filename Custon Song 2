use_bpm 120
use_synth :saw
i = 0
define :m do |a, b, c, d, e ,f, g|
  with_fx :distortion do
    play f
    sleep 0.5
    play g
    sleep 0.5   #1
    play b
    sleep 0.5
    play g
    sleep 0.5  #2
    play d
    sleep 0.5
    play c
    sleep 0.5 #3
    play b
    sleep 0.5
    play g
    sleep 0.5   #4
    play f
    sleep 0.5
    play g
    sleep 0.5   #5
    play b
    sleep 0.5
    play g
    sleep 0.5   #6
    play c
    sleep 0.5
    play b
    sleep 0.5   #7
    play a
    sleep 0.5
    play b
    sleep 0.5   #8
    play :e4
    sleep 0.5
    play g
    sleep 0.5   #9
    play b
    sleep 0.5
    play g
    sleep 0.5  #10
    play c
    sleep 0.5
    play b
    sleep 0.5  #11
    play g
    sleep 0.5
    play b
    sleep 0.5  #12
    play e
    sleep 0.5
    play g
    sleep 0.5  #13
    play b
    sleep 0.5
    play g
    sleep 0.5 #14
    play b
    sleep 0.5
    play g
    sleep 0.5 #15
    play b
    sleep 0.5
    play g
    sleep 0.5 #16
  end
end


