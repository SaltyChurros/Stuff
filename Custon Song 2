part = [:g4,:bb4,:g4,:d5,:c5,:b4,:g4,:f4,:bb4,:f4,:c5,:b4,:a4,:b4,:e5,:g5,:e5,:c6,:bb5,:g5,:bb5,:eb5,:g5,:bb5,:g5,:bb5,:g5,:bb5,:g5,]
